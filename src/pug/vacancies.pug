doctype html
html(lang='en')

    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
        meta(name='description', content='')
        meta(name='author', content='Bogdan Veremienko')
        title Вакансії
        link(rel='icon', type='image/x-icon', href='assets/favicon.ico')
        link(rel='icon', type='image/png', href='assets/logo.png')
        include includes/css.pug
    body.d-flex.flex-column.h-100
        main.flex-shrink-0
            include includes/navbar.pug
            // Page content
            section.py-5
                .container.px-5
                    h1.fw-bolder.fs-3.mb-4 Вакансії
                    .row.gx-5.justify-content-center
                        each val, i in [1,2,3,4,5,6]
                            .col-md-6.col-xl-4.mb-5
                                .card.h-100.shadow.border-0
                                    .card-body.p-4.text-center
                                        .feature.bg-primary.bg-gradient.text-white.rounded-3.mb-3.mx-auto
                                            i.bi.bi-briefcase
                                        h5.card-title.fw-bolder Слот вакансії
                                        p.card-text.text-muted Тут буде опис вакансії або вимоги...
                                    .card-footer.bg-transparent.border-0.pt-0
                                        // Можно добавить кнопку или ссылку позже
        include includes/footer.pug
        include includes/scripts.pug 